<h2>Create a new question for your Form: <%= @form.title %>!</h2>

<form id="new-question" action="/forms/<%= @form.id %>/questions" method = "post">
  <input class="input" type="text" name="question" placeholder="Question"><br>
  <button class="btn-type" id="add-option">Add Option</button>
  <button class="btn-type" id="#finish-form">Submit Question</button>
</form>

<form id="finish-form" action="/forms/<%= @form.id %>/survey" method="post">
  <input class="btn-type-survey" name="end-survey" type="<%= @form.questions.empty? ? "hidden" : "submit" %>" value="Submit Survey">
</form>